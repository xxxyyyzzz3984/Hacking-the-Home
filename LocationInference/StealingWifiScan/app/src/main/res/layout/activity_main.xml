<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yinhao.stealingwifiscan.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maintitleText"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="50px"
        android:textColor="@color/colorBlack"
        android:id="@+id/TitleTextView"
        />
    
    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AttackSwitch"
        android:checked="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/switchText"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack is off"
        android:id="@+id/switchText"
        android:textColor="@color/colorGrey"
        android:textSize="50px"
        android:layout_below="@+id/TitleTextView"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true" />

    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Click to View Your Location"
        android:textColor="@color/gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/AttackSwitch"
        android:id="@+id/viewlcbtn"
        app:sub_btn_duration="1500"
        android:visibility="invisible"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Target Google Home IP Address(Optional)"
        android:gravity="center"
        android:id="@+id/ghdIPText"
        android:layout_below="@+id/AttackSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="192.168.201.3"/>


</RelativeLayout>
